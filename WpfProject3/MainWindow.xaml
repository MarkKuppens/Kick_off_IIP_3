<Window x:Class="WpfProject3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hw="http://schemas.hpod9.com/haley/wpf"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject3"
        mc:Ignorable="d"
        Background="AliceBlue"
        Height="500" Width="900">

    <Grid>
        <Grid x:Name="Grid1" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Height="500" Width="900" Visibility="Visible">
            <Rectangle HorizontalAlignment="Center" Height="100" Margin="0,27,0,0" VerticalAlignment="Top" Width="698" RadiusY="50" RadiusX="50" >
                <Rectangle.Fill>
                    <SolidColorBrush Color="#FFA0E8AF" Opacity="0.4"/>
                </Rectangle.Fill>
            </Rectangle>
            <Label x:Name="LblKeuze" Content="Wie ben jij?" HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top" Height="76" Width="288" FontSize="48" FontFamily="Bookman Old Style"/>
            <Button x:Name="BtnStudent" Content="STUDENT" HorizontalAlignment="Left" Margin="101,168,0,0" VerticalAlignment="Top" Height="205" Width="205" FontSize="36" BorderBrush="{x:Null}" FontFamily="Bookman Old Style" Click="BtnStudent_Click">
                <Button.Background>
                    <SolidColorBrush Color="#FFA0E8AF" Opacity="0.4"/>
                </Button.Background>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="50"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="BtnCompany" Content="Bedrijf" HorizontalAlignment="Left" Margin="560,168,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="205" Width="205" FontSize="36" BorderBrush="{x:Null}" FontFamily="Bookman Old Style" Click="BtnCompany_Click">
                <Button.Background>
                    <SolidColorBrush Color="#FFA0E8AF" Opacity="0.4"/>
                </Button.Background>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="50"/>
                    </Style>
                </Button.Resources>
            </Button>
            <hw:PlainImage hw:Icon.Default="{StaticResource bs_building}" Height="60" Width="60" Margin="630,308,210,132" hw:Icon.DefaultColor="#C6CCB2"/>
            <hw:PlainImage hw:Icon.Default="{StaticResource bs_mortarboard_fill}" Height="60" Width="60" Margin="171,308,669,132" hw:Icon.DefaultColor="#C6CCB2" RenderTransformOrigin="0.387,0.587" />
            <Label x:Name="LblSponsors" Content="Onze Sponsors" HorizontalAlignment="Left" Margin="101,378,0,0" VerticalAlignment="Top" Height="34" Width="136" FontFamily="Bookman Old Style"/>
            <Image x:Name="imgSponsor1" HorizontalAlignment="Left" Height="40" Margin="127,412,0,0" VerticalAlignment="Top" Width="40"/>
            <Image x:Name="imgSponsor2" HorizontalAlignment="Left" Height="40" Margin="201,412,0,0" VerticalAlignment="Top" Width="40" RenderTransformOrigin="0.735,0.54"/>
            <Image x:Name="imgSponsor3" HorizontalAlignment="Left" Height="40" Margin="275,412,0,0" VerticalAlignment="Top" Width="40"/>
            <Image x:Name="imgSponsor4" HorizontalAlignment="Left" Height="40" Margin="345,412,0,0" VerticalAlignment="Top" Width="40"/>
            <Image x:Name="imgSponsor5" HorizontalAlignment="Left" Height="40" Margin="420,412,0,0" VerticalAlignment="Top" Width="40"/>
            <Button x:Name="BtnStop" Content="Stoppen" HorizontalAlignment="Left" Margin="754,412,0,0" VerticalAlignment="Top" Height="28" Width="74" BorderBrush="{x:Null}" FontFamily="Bookman Old Style" Click="BtnStop_Click">
                <Button.Background>
                    <SolidColorBrush Color="#FFA0E8AF" Opacity="0.4"/>
                </Button.Background>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <Grid x:Name="Grid2" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Height="500" Width="900" Visibility="Hidden">
            <Rectangle HorizontalAlignment="Center" Height="100" Margin="0,10,0,0" VerticalAlignment="Top" Width="698" RadiusY="50" RadiusX="50" >
                <Rectangle.Fill>
                    <SolidColorBrush Color="#FFA0E8AF" Opacity="0.4"/>
                </Rectangle.Fill>
            </Rectangle>
            <Label x:Name="LblCursus" Content="Kies je cursus
                   ?" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" Height="76" Width="360" FontSize="48" FontFamily="Bookman Old Style"/>
            <Button x:Name="BtnTerug" Content="Terug" HorizontalAlignment="Left" Margin="724,437,0,0" VerticalAlignment="Top" Width="75" Click="BtnTerug_Click" FontFamily="Bookman Old Style" Height="35" RenderTransformOrigin="0.152,0.93" FontSize="14" FontWeight="Bold" >
                <Button.Background>
                    <SolidColorBrush Color="#FFA0E8AF" Opacity="0.4"/>
                </Button.Background>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="BtnVerder" Content="Verder" HorizontalAlignment="Left" Margin="817,437,0,0" VerticalAlignment="Top" Width="60" Click="BtnVerder_Click" Height="35" FontFamily="Bookman Old Style" FontSize="14" FontWeight="Bold" >
                <Button.Background>
                    <SolidColorBrush Color="#FFA0E8AF" Opacity="0.4"/>
                </Button.Background>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Image x:Name="ImgCursus1" HorizontalAlignment="Left" Height="120" Margin="90,140,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.55,0.277" />
            <Image x:Name="ImgCursus2" HorizontalAlignment="Left" Height="120" Margin="329,140,0,0" VerticalAlignment="Top" Width="120"/>
            <Image x:Name="ImgCursus3" HorizontalAlignment="Left" Height="120" Margin="555,140,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.118,0.073"/>
            <Image x:Name="ImgCursus4" HorizontalAlignment="Left" Height="120" Margin="90,297,0,0" VerticalAlignment="Top" Width="120"/>
            <Image x:Name="ImgCursus5" HorizontalAlignment="Left" Height="120" Margin="330,297,0,0" VerticalAlignment="Top" Width="120"/>
            <Image x:Name="ImgCursus6" HorizontalAlignment="Left" Height="120" Margin="555,297,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.355,0.532"/>
            <RadioButton x:Name="RbnCursus1" Content="bandenmonteur" HorizontalAlignment="Left" Margin="90,270,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="RbnCursus2" Content="Boekhoudkundig Assistent" HorizontalAlignment="Left" Margin="330,270,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="RbnCursus3" Content="Brood- en banketbakker" HorizontalAlignment="Left" Margin="555,270,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="RbnCursus4" Content="Dakwerker" HorizontalAlignment="Left" Margin="90,430,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="RbnCursus5" Content="fietshersteller" HorizontalAlignment="Left" Margin="329,430,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="RbnCursus6" Content="Winkelverkoper" HorizontalAlignment="Left" Margin="555,430,0,0" VerticalAlignment="Top"/>
        </Grid>

        <Grid x:Name="Grid3" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="800" Visibility="Collapsed">
            <Rectangle HorizontalAlignment="Center" Height="50" Fill="#330036" VerticalAlignment="Top" Width="800" Grid.Column="1"/>
            <Label HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" Content="Vul onderstaand formulier in" Foreground="#C6CCB2" FontFamily="Arial" FontSize="28" Grid.Column="1"></Label>
            <Rectangle HorizontalAlignment="Left" Height="385" Margin="0,50,0,0"  Fill="#093824" VerticalAlignment="Top" Width="800" Grid.ColumnSpan="2"/>
            <Label x:Name="LblNaam" Content="Naam *" HorizontalAlignment="Left" Margin="50,70,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtVoornaam" HorizontalAlignment="Left" Margin="50,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
            <TextBox x:Name="TxtAchternaam" HorizontalAlignment="Left" Margin="300,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
            <Label x:Name="LblVoornaam" Content="Voornaam" HorizontalAlignment="Left" Margin="50,115,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="12" />
            <Label x:Name="LblAchternaam" Content="Achternaam" HorizontalAlignment="Left" Margin="300,115,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="12" />
            <Label x:Name="LblAdres" Content="Adres *" HorizontalAlignment="Left" Margin="50,140,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtStraat" HorizontalAlignment="Left" Margin="50,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="400"/>
            <Label x:Name="LblStraat" Content="Straat" HorizontalAlignment="Left" Margin="50,185,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="12" />
            <TextBox x:Name="TxtHuisnr" HorizontalAlignment="Left" Margin="520,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="80"/>
            <TextBox x:Name="TxtToevoeging" HorizontalAlignment="Left" Margin="650,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="80"/>
            <Label x:Name="LblHuisnr" Content="Huinr" HorizontalAlignment="Left" Margin="520,185,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="12" />
            <Label x:Name="LblToevoeging" Content="Toevoeging" HorizontalAlignment="Left" Margin="650,185,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="12" />
            <Label x:Name="LblPostcode" Content="Postcode *" HorizontalAlignment="Left" Margin="50,210,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtPostcode" HorizontalAlignment="Left" Margin="50,235,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
            <Label x:Name="LblPlaats" Content="Woonplaats *" HorizontalAlignment="Left" Margin="210,210,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtPlaats" HorizontalAlignment="Left" Margin="210,235,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
            <Label x:Name="LblGsm" Content="Gsm *" HorizontalAlignment="Left" Margin="50,255,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtGsm" HorizontalAlignment="Left" Margin="50,280,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="400"/>
            <Label x:Name="LblEmail" Content="Email *" HorizontalAlignment="Left" Margin="50,300,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtEmail" HorizontalAlignment="Left" Margin="50,325,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="400"/>
            <Label x:Name="LblRijks" Content="Rijksregisternummer *" HorizontalAlignment="Left" Margin="50,345,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtRijks" HorizontalAlignment="Left" Margin="50,370,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="400"/>
            <Button x:Name="BtnSubmit1" Content="Verzenden" HorizontalAlignment="Left" Margin="475,400,0,0" VerticalAlignment="Top" Width="100" Click="BtnSubmit1_Click"/>
            <Button x:Name="BtnClear1" Content="Wissen" HorizontalAlignment="Left" Margin="600,400,0,0" VerticalAlignment="Top" Width="100" Click="BtnClear1_Click"/>
            <Button x:Name="BtnTerug1" Content="Terug" HorizontalAlignment="Left" Margin="725,400,0,0" VerticalAlignment="Top" Width="50" Click="BtnTerug1_Click" />

        </Grid>
        <Grid x:Name="Grid4" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="800" Visibility="Hidden">
            <Rectangle HorizontalAlignment="Center" Height="50" Fill="#330036" VerticalAlignment="Top" Width="800" Grid.Column="1"/>
            <Label HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" Content="Vul uw bedrijfsgegevens in" Foreground="#C6CCB2" FontFamily="Arial" FontSize="28" Grid.Column="1"></Label>
            <Rectangle HorizontalAlignment="Left" Height="385" Margin="0,50,0,0"  Fill="#BF4E30" VerticalAlignment="Top" Width="800" Grid.ColumnSpan="2"/>
            <Label x:Name="LblBedrijfsNaam" Content="Bedrijfsnaam *" HorizontalAlignment="Left" Margin="50,70,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtBedrijfsNaam" HorizontalAlignment="Left" Margin="50,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="400"/>
            <Label x:Name="LblRechtsVorm" Content="Rechtsvorm *" HorizontalAlignment="Left" Margin="550,70,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtRechtsVorm" HorizontalAlignment="Left" Margin="550,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
            <Label x:Name="LblBedrijfAdres" Content="Adres *" HorizontalAlignment="Left" Margin="50,140,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtBedrijfStraat" HorizontalAlignment="Left" Margin="50,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="400"/>
            <Label x:Name="LblBedrijfStraat" Content="Straat" HorizontalAlignment="Left" Margin="50,185,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="12" />
            <TextBox x:Name="TxtBedrijfHuisnr" HorizontalAlignment="Left" Margin="520,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="80"/>
            <TextBox x:Name="TxtBedrijfToevoeging" HorizontalAlignment="Left" Margin="650,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="80"/>
            <Label x:Name="LblBedrijfHuisnr" Content="Huinr" HorizontalAlignment="Left" Margin="520,185,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="12" />
            <Label x:Name="LblBedrijfToevoeging" Content="Toevoeging" HorizontalAlignment="Left" Margin="650,185,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="12" />
            <Label x:Name="LblBedrijfPostcode" Content="Postcode *" HorizontalAlignment="Left" Margin="50,210,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtBedrijfPostcode" HorizontalAlignment="Left" Margin="50,235,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
            <Label x:Name="LblBedrijfPlaats" Content="Plaats *" HorizontalAlignment="Left" Margin="210,210,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtBedrijfPlaats" HorizontalAlignment="Left" Margin="210,235,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
            <Label x:Name="LblTelefoon" Content="Gsm *" HorizontalAlignment="Left" Margin="50,255,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtTelefoon" HorizontalAlignment="Left" Margin="50,280,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="400"/>
            <Label x:Name="LblBedrijfEmail" Content="Email *" HorizontalAlignment="Left" Margin="50,300,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtBedrijfEmail" HorizontalAlignment="Left" Margin="50,325,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="400"/>
            <Label x:Name="LblKBO" Content="KBO-nummer *" HorizontalAlignment="Left" Margin="550,255,0,0" VerticalAlignment="Top" Foreground="#C6CCB2" FontFamily="Arial" FontSize="16" FontWeight="DemiBold"/>
            <TextBox x:Name="TxtKBO" HorizontalAlignment="Left" Margin="550,280,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
            <Button x:Name="BtnSubmit2" Content="Verzenden" HorizontalAlignment="Left" Margin="475,400,0,0" VerticalAlignment="Top" Width="100" Click="BtnSubmit2_Click"/>
            <Button x:Name="BtnClear2" Content="Wissen" HorizontalAlignment="Left" Margin="600,400,0,0" VerticalAlignment="Top" Width="100" Click="BtnClear2_Click"/>
            <Button x:Name="BtnTerug2" Content="Terug" HorizontalAlignment="Left" Margin="725,400,0,0" VerticalAlignment="Top" Width="50" Click="BtnTerug2_Click" />
        </Grid>

    </Grid>

</Window>
